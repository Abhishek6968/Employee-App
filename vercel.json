{
  "version": 2,
  "projects": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "buildCommand": "npm run build",
      "outputDirectory": "build"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    }
  ]
}
